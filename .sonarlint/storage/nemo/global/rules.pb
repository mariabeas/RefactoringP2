  <li><code>appearance</code></li>
  <li><code>border-end</code></li>
  <li><code>border-end-color</code></li>
  <li><code>border-end-style</code></li>
  <li><code>border-end-width</code></li>
  <li><code>border-image</code></li>
  <li><code>border-radius</code></li>
  <li><code>border-start</code></li>
  <li><code>border-start-color</code></li>
  <li><code>border-start-style</code></li>
  <li><code>border-start-width</code></li>
  <li><code>box-align</code></li>
  <li><code>box-direction</code></li>
  <li><code>box-flex</code></li>
  <li><code>box-lines</code></li>
  <li><code>box-ordinal-group</code></li>
  <li><code>box-orient</code></li>
  <li><code>box-pack</code></li>
  <li><code>box-sizing</code></li>
  <li><code>box-shadow</code></li>
  <li><code>column-count</code></li>
  <li><code>column-gap</code></li>
  <li><code>column-rule</code></li>
  <li><code>column-rule-color</code></li>
  <li><code>column-rule-style</code></li>
  <li><code>column-rule-width</code></li>
  <li><code>column-width</code></li>
  <li><code>hyphens</code></li>
  <li><code>line-break</code></li>
  <li><code>margin-end</code></li>
  <li><code>margin-start</code></li>
  <li><code>marquee-speed</code></li>
  <li><code>marquee-style</code></li>
  <li><code>padding-end</code></li>
