    doThirdThing();
    break;
  default:
    doTheRest();
}

if (a >= 0 &amp;&amp; a < 10) {
  doTheThing();
else if (a >= 10 &amp;&amp; a < 20) {
  doTheOtherThing();
}
else if (a >= 20 &amp;&amp; a < 50) {
