  -- Cause the failure
  my_table_ids(10) := NULL;

  FORALL i IN my_table_ids.FIRST .. my_table_ids.LAST SAVE EXCEPTIONS -- Compliant
    INSERT INTO my_table
    VALUES (my_table_ids(i));
